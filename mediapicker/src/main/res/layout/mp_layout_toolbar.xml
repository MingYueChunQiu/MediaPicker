<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tb_mp_media_picker_bar"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@android:color/white"
    android:elevation="@dimen/dp_10"
    app:navigationIcon="@drawable/mp_back">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_mp_media_picker_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/mp_selector_confirm_select_button"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_4"
        android:text="@string/mp_confirm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_14" />
</android.support.v7.widget.Toolbar>